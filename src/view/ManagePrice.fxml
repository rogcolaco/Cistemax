<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManagePrice">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
