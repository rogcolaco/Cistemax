                <TableColumn fx:id="cSessionType" prefWidth="161.0" text="Tipo da Sessão" />
                <TableColumn fx:id="cSessionPrice" prefWidth="85.0" text="Preço" />
              </columns>
            </TableView>
            <Button fx:id="btnUpdatePrice" layoutX="439.0" layoutY="51.0" mnemonicParsing="false" onAction="#updatePrice" prefHeight="25.0" prefWidth="146.0" text="Alterar Preço" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="51.0" />
